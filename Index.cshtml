
 @model IEnumerable<mswebtechAssignment1.Models.BPMeasurement>

@{
    ViewData["Title"] = "All Measurements";
}

<h1>All Measurements</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New BP Measurement</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Reading (Systolic/Diastolic)</th>
            <th>Category</th>
            <th>Position</th>
            <th>Date Taken</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Systolic / @item.Diastolic</td>
                <td style="color:
                    @(item.Category == "Normal" ? "darkgreen" :
                      item.Category == "Elevated" ? "blue" :
                      item.Category == "Hypertension Stage 1" ? "orange" :
                      item.Category == "Hypertension Stage 2" ? "orangered" :
                      item.Category == "Hypertensive Crisis" ? "darkred" : "black")">
                    @item.Category
                </td>
                <td>@item.Position</td>
                <td>@item.DateTaken.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
